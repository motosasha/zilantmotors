//- Все примеси в этом файле должны начинаться c имени блока (modal)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт
//- в сборку

mixin modal(mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +modal("some-mod")

  //- список модификаторов
  -
    var allMods = "";
    if (typeof (mods) !== "undefined" && mods) {
      var modsList = mods.split(",");
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + " modal--" + modsList[i].trim();
      }
    }

  .modal(class=allMods)&attributes(attributes)
    .modal__inner
      block
